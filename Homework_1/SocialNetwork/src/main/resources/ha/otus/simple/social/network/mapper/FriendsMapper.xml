<!--
                         user_id BIGINT not null,
                         friend_id BIGINT not null
-->
    <insert id="addToFriends" parameterType="ha.otus.simple.social.network.model.Friendship">
        INSERT INTO users
        (
            user_id
            , friend_id
        )
        VALUES
        (
             #{user_id}
            , #{friend_id}
        )
    </insert>

